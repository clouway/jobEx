<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d='urn:import:com.google.gwt.user.cellview.client'
             xmlns:n="urn:import:com.clouway.jobex.client.navigation">

  <ui:with field="res" type="com.clouway.jobex.client.icons.IconsResources"/>

  <ui:style>


    .tableContainer {
      text-align: center;
      border-radius: 10px;
      border-width: 2px;
      border-style: solid;
      background: #e8e8e8;
      text-align: center;
      margin: auto;
      padding: 5px;
      width: 80%;

    }

    .tablePanel {
      width: 100%;
    }

    .table {
      width: 100%;
      /*border: 1px solid;*/
    }

    .lable {
      font-size: 20px;
      font-stretch: bold;
    }

    .container {
      margin: auto;
      text-align: center;
    }


  </ui:style>
  <g:HTMLPanel>

    <g:HTMLPanel>
      <g:Image resource="{res.employerIcon}"/>
      <g:Label text="Employer Jobs" addStyleNames="{style.lable}"/>
    </g:HTMLPanel>

    <n:NavigationMenu ui:field="menu"/>

    <g:HTMLPanel addStyleNames="{style.tableContainer}">
      <d:CellTable ui:field="announcedJobsTable" addStyleNames="{style.tablePanel}"/>

    </g:HTMLPanel>

  </g:HTMLPanel>


</ui:UiBinder>