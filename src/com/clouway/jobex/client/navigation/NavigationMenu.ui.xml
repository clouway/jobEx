<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>

  <ui:style>
    .nav {

      text-align: center;
      margin: 10px 0px 10px 0px;
    }


  </ui:style>

  <g:HTMLPanel addStyleNames="{style.nav}">

    <b:Navbar>

      <b:Brand text="JobEx"/>
      <b:Nav>

        <b:NavLink text="Home" ui:field="home"/>
        <b:NavLink text="Create New CV" ui:field="newCV"/>
        <b:NavLink text="Preview My CVs" ui:field="cvList"/>
        <b:NavLink text="Announce A Job" ui:field="announceJob"/>
        <b:NavLink text="Jobs Review" ui:field="jobReview"/>
      </b:Nav>
    </b:Navbar>

  </g:HTMLPanel>
</ui:UiBinder>