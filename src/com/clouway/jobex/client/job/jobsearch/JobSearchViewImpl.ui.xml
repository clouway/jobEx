<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:n='urn:import:com.clouway.jobex.client.navigation'>
  <ui:style>
    .mainStyle {
      text-align: center;
      /*width: 800px;*/

      margin-left: auto;
      margin-right: auto;
      background-color: #ebddff;
    }

    .table {
      margin: auto;

    }
  </ui:style>


  <g:HTMLPanel styleName="{style.mainStyle}">

    <n:NavigationMenu ui:field="navigation"/>
    Location:
    <g:ListBox ui:field="locationValue"/>
    Category:
    <g:ListBox ui:field="categoryValue"/>
    <g:Button ui:field="searchButton">Search</g:Button>
    <c:CellTable ui:field="jobsCellTable" addStyleNames="{style.table}"/>
  </g:HTMLPanel>
</ui:UiBinder>