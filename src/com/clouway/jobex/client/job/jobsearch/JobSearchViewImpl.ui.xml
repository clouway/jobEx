<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
  <ui:style>
    .mainStyle {
      text-align: center;
      width: 800px;
      margin-left: auto;
      margin-right: auto;
      background-color: #ebddff;
    }
  </ui:style>


  <g:HTMLPanel styleName="{style.mainStyle}">
    Location:<g:ListBox ui:field="locationValue"/>
    Category:<g:ListBox ui:field="categoryValue"/>
    <g:Button ui:field="searchButton">Search</g:Button>
    <c:CellTable ui:field="jobsCellTable" />
  </g:HTMLPanel>
</ui:UiBinder>