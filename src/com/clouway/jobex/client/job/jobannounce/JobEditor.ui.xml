<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>

  <g:HTMLPanel>

    <table>
      <tr>
        <td>Company: </td>
        <td><g:TextBox ui:field="company" /></td>
      </tr>

      <tr>
        <td>Position: </td>
        <td><g:TextBox ui:field="position" /></td>
      </tr>

      <tr>
        <td>Category: </td>
        <td><g:ListBox ui:field="selectCategory" /></td>
      </tr>

      <tr>
        <td>Location: </td>
        <td><g:ListBox ui:field="selectLocation" /></td>
      </tr>

      <tr>
        <td>Expiration Date: </td>
        <td><d:DateBox ui:field="date" /></td>
      </tr>
    </table>



  </g:HTMLPanel>
</ui:UiBinder>