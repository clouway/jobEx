<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>

  <g:HTMLPanel>

    <table>
      <tr>
        <td>Company: </td>
        <td><g:TextBox ui:field="company" /></td>
      </tr>

      <tr>
        <td>Position: </td>
        <td><g:TextBox ui:field="position" /></td>
      </tr>

      <tr>
        <td>Category: </td>
        <td>
          <g:ListBox ui:field="selectCategory" selectedIndex="0">
            <g:item>Banking</g:item>
            <g:item>Engineering</g:item>
            <g:item>IT</g:item>
            <g:item>Franchise</g:item>
            <g:item>Marketing</g:item>
          </g:ListBox>
        </td>
      </tr>

      <tr>
        <td>Location: </td>
        <td>
          <g:ListBox ui:field="selectLocation" selectedIndex="0">
            <g:item>Burgas</g:item>
            <g:item>Plovdiv</g:item>
            <g:item>Sofia</g:item>
            <g:item>Varna</g:item>
            <g:item>Veliko Tarnovo</g:item>
          </g:ListBox>
        </td>
      </tr>

      <tr>
        <td>Expiration Date: </td>
        <td><d:DateBox ui:field="date" /></td>
      </tr>
    </table>



  </g:HTMLPanel>
</ui:UiBinder>