<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.datepicker.client.ui">

  <g:HTMLPanel>

    <table>

      <tr>
        <td>Position: </td>
        <td><g:TextBox ui:field="position" height="28"/></td>
      </tr>

      <tr>
        <td>Category: </td>
        <td>
          <g:ListBox ui:field="selectCategory" width="210">
            <g:item />
            <g:item>Banking</g:item>
            <g:item>Engineering</g:item>
            <g:item>IT</g:item>
            <g:item>Franchise</g:item>
            <g:item>Marketing</g:item>
          </g:ListBox>
        </td>
      </tr>

      <tr>
        <td>Location: </td>
        <td>
          <g:ListBox ui:field="selectLocation" width="210">
            <g:item />
            <g:item>Burgas</g:item>
            <g:item>Plovdiv</g:item>
            <g:item>Sofia</g:item>
            <g:item>Varna</g:item>
            <g:item>Veliko Tarnovo</g:item>
          </g:ListBox>
        </td>
      </tr>

      <tr>
        <td>Expiration Date: </td>
        <td><b:DateBox ui:field="date" autoClose="true" height="28" /></td>
      </tr>
    </table>



  </g:HTMLPanel>
</ui:UiBinder>