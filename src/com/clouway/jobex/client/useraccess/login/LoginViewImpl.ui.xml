<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style>.container {

    text-align: center;

    margin: auto;

    padding: 5px;

    border: 1px solid background;

    width: 20%;
    height: 50%;

    background-image:url(http://files.myopera.com/Woockez/albums/1203071/hot-ass-wallpapers.jpg);
    border-radius: 10px;

  }

  </ui:style>

  <g:HTMLPanel styleName="{style.container}">
    Email:
    <g:TextBox ui:field="email"/>
    <br/>
    Password:
    <g:PasswordTextBox ui:field="password"/>
    <br/>
    Login as: <g:ListBox ui:field="loginType" width="150"/>
    <br />
    <g:Button ui:field="loginButton">Login</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>